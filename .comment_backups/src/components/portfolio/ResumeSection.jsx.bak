import React, { useState, useEffect } from 'react';
import { motion } from 'framer-motion';
import { Download, ExternalLink, Loader2, FileText } from 'lucide-react';
import Button from '@/components/ui/button';

// Google Docs export URL (publicly viewable doc)
const GOOGLE_DOC_ID = '17Xn1xGJ9gcJJTIxmYmCLU3c0YjkV7ywOep8bdCrsGHA';
const GOOGLE_DOC_PDF_URL = `https://docs.google.com/document/d/${GOOGLE_DOC_ID}/export?format=pdf`;
const GOOGLE_DOC_VIEW_URL = `https://docs.google.com/document/d/${GOOGLE_DOC_ID}/preview`;

export default function ResumeSection() {
  const [loading, setLoading] = useState(true);

  useEffect(() => {
    // Simulate iframe load time
    const timer = setTimeout(() => setLoading(false), 1500);
    return () => clearTimeout(timer);
  }, []);

  return (
    <section id="resume" className="py-32 px-6 bg-white/[0.02]">
      <div className="max-w-6xl mx-auto">
        <motion.div
          initial={{ opacity: 0, y: 40 }}
          whileInView={{ opacity: 1, y: 0 }}
          viewport={{ once: true, margin: "-100px" }}
          className="text-center mb-16"
        >
          <p className="text-blue-400 text-sm tracking-widest uppercase mb-4">
            My Background
          </p>
          <h2 className="text-4xl md:text-5xl font-bold text-white mb-4">
            <span className="text-blue-500">Resume</span>
          </h2>
          <p className="text-gray-400 max-w-2xl mx-auto mb-8">
            View my complete professional resume with detailed experience, 
            education, and technical skills. Always up-to-date.
          </p>
          
          {/* Action buttons */}
          <div className="flex flex-wrap justify-center gap-4">
            <motion.a
              href={GOOGLE_DOC_PDF_URL}
              download="Emmet_Hoversten_Resume.pdf"
              whileHover={{ scale: 1.05 }}
              whileTap={{ scale: 0.95 }}
            >
              <Button className="border border-white/10 bg-white/5 text-white hover:bg-white/10 px-6 py-3 rounded-xl">
                <Download className="w-4 h-4 mr-2" />
                Download PDF
              </Button>
            </motion.a>
            
            <motion.a
              href={`https://docs.google.com/document/d/${GOOGLE_DOC_ID}/edit`}
              target="_blank"
              rel="noopener noreferrer"
              whileHover={{ scale: 1.05 }}
              whileTap={{ scale: 0.95 }}
            >
              <Button variant="outline" className="border-white/10 bg-white/5 text-white hover:bg-white/10 px-6 py-3 rounded-xl">
                <ExternalLink className="w-4 h-4 mr-2" />
                Open in Google Docs
              </Button>
            </motion.a>
          </div>
        </motion.div>

        {/* Resume viewer */}
        <motion.div
          initial={{ opacity: 0, y: 30 }}
          whileInView={{ opacity: 1, y: 0 }}
          viewport={{ once: true }}
          className="relative"
        >
          <div className="rounded-3xl border border-white/10 bg-white/5 backdrop-blur-sm overflow-hidden shadow-2xl">
            {loading && (
              <div className="absolute inset-0 flex items-center justify-center bg-[#0a0a0f]/80 backdrop-blur-sm z-10">
                <div className="text-center">
                  <Loader2 className="w-8 h-8 text-blue-400 animate-spin mx-auto mb-4" />
                  <p className="text-gray-400">Loading resume...</p>
                </div>
              </div>
            )}
            
            {/* Embedded Google Doc */}
            <iframe
              src={GOOGLE_DOC_VIEW_URL}
              className="w-full h-[800px] bg-white"
              title="Emmet Hoversten Resume"
              onLoad={() => setLoading(false)}
              style={{
                border: 'none',
                display: loading ? 'none' : 'block'
              }}
            />
            
            {/* Fallback if iframe doesn't load */}
            <noscript>
              <div className="p-12 text-center">
                <FileText className="w-12 h-12 text-gray-400 mx-auto mb-4" />
                <p className="text-gray-400 mb-4">
                  Unable to display the resume preview.
                </p>
                <a
                  href={GOOGLE_DOC_PDF_URL}
                  className="text-blue-400 hover:underline"
                >
                  Download PDF instead
                </a>
              </div>
            </noscript>
          </div>
          
          {/* Auto-update indicator */}
          <motion.div
            initial={{ opacity: 0 }}
            whileInView={{ opacity: 1 }}
            viewport={{ once: true }}
            className="mt-4 text-center"
          >
          </motion.div>
        </motion.div>
      </div>
    </section>
  );
}